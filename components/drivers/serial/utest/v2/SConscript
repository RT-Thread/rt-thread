Import('rtconfig')
from building import *

cwd     = GetCurrentDir()
src     = Glob('*.c')

path = [cwd]

if GetDepend(['UTEST_SERIAL_POSIX_TC']):
    src += Glob('posix/*.c')

if GetDepend(['UTEST_SERIAL_QEMU_TC']):
    src += Glob('qemu/*.c')

group = DefineGroup('utestcases', src, depend = ['RT_UTEST_SERIAL_V2'], CPPPATH = path)

Return('group')

