                        select BSP_I2C_USING_DMA
                        select BSP_I2C2_USING_DMA
                    config BSP_I2C2_RX_USING_DMA
                        bool "Enable I2C2 RX DMA"
                        default n
                        select BSP_I2C_USING_DMA
                        select BSP_I2C2_USING_DMA
                endif
        endif

