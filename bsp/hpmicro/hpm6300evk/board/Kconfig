    menuconfig BSP_USING_ADC
        bool "Enable ADC"
        default n
        select RT_USING_ADC if BSP_USING_ADC
        if BSP_USING_ADC
            menuconfig BSP_USING_ADC16
            bool "Enable ADC16"
            default y
            if BSP_USING_ADC16
                config BSP_USING_ADC0
                    bool "Enable ADC0"
                    default n
                config BSP_USING_ADC1
                    bool "Enable ADC1"
                    default y
                config BSP_USING_ADC2
                    bool "Enable ADC2"
                    default n
            endif
        endif
endmenu

