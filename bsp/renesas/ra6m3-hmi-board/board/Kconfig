                            hex "i2c1 scl pin number (hex)"
                            range 0x0000 0xFFFF
                            default 0x202
                        config BSP_I2C1_SDA_PIN
                            hex "i2c1 sda pin number (hex)"
                            range 0x0000 0xFFFF
                            default 0x203
                    endif
            endif

