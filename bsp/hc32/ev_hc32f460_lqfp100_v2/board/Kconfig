                        bool "Enable I2C1 TX DMA"
                        default n
                        select BSP_I2C_USING_DMA
                        select BSP_I2C1_USING_DMA
                    config BSP_I2C1_RX_USING_DMA
                        bool "Enable I2C1 RX DMA"
                        default n
                        select BSP_I2C_USING_DMA
                        select BSP_I2C1_USING_DMA
                endif

            menuconfig BSP_USING_I2C2
                bool "Enable I2C2 BUS"
