mainmenu "RT-Thread Project Configuration"

config BSP_DIR
    string
    option env="BSP_ROOT"
    default "."

config RTT_DIR
    string
    option env="RTT_ROOT"
    default "../../.."

config PKGS_DIR
    string
    option env="PKGS_ROOT"
    default "packages"

source "$RTT_DIR/Kconfig"
source "$PKGS_DIR/Kconfig"

config SOC_IMX6ULL
    bool
    select ARCH_ARM_CORTEX_A7
    select RT_USING_CACHE
    select ARCH_ARM_MMU
    select RT_USING_COMPONENTS_INIT
    select RT_USING_USER_MAIN
    select RT_USING_FPU
    select RT_USING_GIC_V2
    default y

    if SOC_IMX6ULL
        config CPU_MCIMX6Y2CVM05
            bool
            default y
        config FSL_SDK_ENABLE_DRIVER_CACHE_CONTROL
            depends on RT_USING_CACHE
            int
            default 1
        config FSL_SDK_DISABLE_DRIVER_CLOCK_CONTROL
            int "Disable Clock control in fsl files"
            default 1
    endif

source "$BSP_DIR/drivers/Kconfig"
