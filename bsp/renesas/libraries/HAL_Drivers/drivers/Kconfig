config BSP_USING_GPIO
    bool "Enable GPIO"
    select RT_USING_PIN
    default y

config BSP_USING_ONCHIP_FLASH
    bool "Enable Onchip FLASH"
    default n

config BSP_USING_WDT
    bool "Enable Watchdog Timer"
    select RT_USING_WDT
    default n

menuconfig BSP_USING_ONCHIP_RTC
    bool "Enable RTC"  
    select RT_USING_RTC                          
    default n                                    
    if BSP_USING_ONCHIP_RTC                      
        menu "RTC Instance Configuration"        
            config BSP_USING_ONCHIP_RTC0
                bool "Enable RTC0 Instance"      
                default n                       
        endmenu
    endif 
